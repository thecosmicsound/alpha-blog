<h2 align="center">All Alpha Bloggers</h2>

<div align="center">
  <%= will_paginate %>

  <% @users.each do |u| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-sm-4 col-sm-offset-4">
          <li><%= link_to gravatar_for(u), user_path(u) %></li>
          <li class="article-title">
            <%= link_to u.username, user_path(u) %>
          </li>
          <li><small><%= pluralize(u.articles.count, "article") if u.articles %></small></li>
          <% if logged_in? && current_user.admin %>
            <li><%= link_to "Delete this user", user_path(u), method: :delete,
                                                              data: {confirm: "Are you sure you want to delete this user and his/her articles?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>

  <%= will_paginate %>
</div>
